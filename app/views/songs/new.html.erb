<div class="container">
  <div class="body">
    <h1>自分のおすすめ曲を投稿</h1>
    <%= form_for @song do |f| %>
  </div>

  <div class="words">
    <div class="field">
      <%= f.label :曲名 %><br>
      <%= f.text_field :tile, :size => 30 %>
    </div>

    <br>

    <div class="field">
      <%= f.label :アーティスト名 %><br>
      <%= f.text_field :name, :size => 30 %>
    </div>

    <br>

    <div class="field">
      <%= f.label :ひとこと %><br>
      <%= f.text_field :about, :size => 30 %>
    </div>
  </div>

  <br>

  <div class="words">
    <h3>当てはまるキーワードにチェックを入れてください</h3>
  </div>



  <div class='form-group'>
    <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
        <div class='form-check'>
            <%= tag.label class: 'form-check-label' do %>
                <%= tag.check_box class: 'form-check-input' %>
                <%= tag.text %>
            <% end %>
        </div>
    <% end %>
  </div>

  <br>

  <%= f.submit "投稿する" %><br>

  <% end %>
  <br>

  <%= link_to "一覧に戻る", songs_path %>

</div>